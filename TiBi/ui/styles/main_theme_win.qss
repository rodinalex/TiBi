/* main_theme_win.qss */

/* ===== General Application ===== */
QWidget {
    font-family: "Segoe UI", "Tahoma", "Microsoft Sans Serif", "Arial", sans-serif;
    font-size: 9pt;
    color: $ON_SURFACE;
    background-color: $SURFACE_CONTAINER;
}

/* ===== Push Buttons ===== */
QPushButton {
    background-color: $PRIMARY;
    border-radius: 6px;
    padding: 2px 8px;
    color: $ON_PRIMARY;
}

QPushButton:hover {
    background-color: $PRIMARY_HOVER;
}

QPushButton:pressed {
    background-color: $PRIMARY_PRESSED;
}

QPushButton:disabled {
    background-color: $OUTLINE_VARIANT;
    color: $SURFACE;
}

/* ===== Size Variants ===== */
QPushButton[buttonSize="compact"] {
    padding: 2px;
    min-width: 22px;
    max-width: 22px;
    min-height: 22px;
    max-height: 22px;
    border-radius: 6px;
}

QPushButton[buttonSize="small"] {
    padding: 1px;
    min-width: 14px;
    max-width: 14px;
    min-height: 14px;
    max-height: 14px;
    border-radius: 3px;
}

/* ===== Tree View ===== */

QTreeView {
    border: none;
    background-color: $SURFACE;
}

QTreeView::item {
    background-color: $SURFACE;
    color: $ON_SURFACE;
}

QTreeView::item:selected {
    background-color: $SECONDARY_CONTAINER;
    color: $ON_SECONDARY_CONTAINER;
}

/* ===== Line Edits / Inputs ===== */
QDoubleSpinBox, QSpinBox {
    background: $SECONDARY_CONTAINER;
    color: $ON_SECONDARY_CONTAINER;

}
QDoubleSpinBox:disabled, QSpinBox:disabled {
    background: $SURFACE;
    color: $OUTLINE_VARIANT;
}

/* ===== Labels ===== */

QLabel[style="bold"] {
    font-weight: bold;
}

QLabel[style="normal"] {
    font-weight: normal;
}